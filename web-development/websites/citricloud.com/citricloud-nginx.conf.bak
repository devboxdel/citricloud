# Optional IP allowlist to bypass maintenance (provide your IPs and uncomment)
# map $remote_addr $is_whitelisted {
#     default 0;
#     203.0.113.10 1;  # Example office IP
#     198.51.100.25 1; # Example developer IP
# }

# Extract JWT from access_token cookie and expose as Authorization header
map $http_cookie $auth_token {
    default "";
    ~*access_token=([^;]+) $1;
}

# Upstream for FastAPI backend (port 8000)
upstream backend_api {
    server 127.0.0.1:8000;
    keepalive 32;
}

# Upstream for Node.js/Frontend service (port 3000)
upstream frontend_service {
    server 127.0.0.1:3000;
    keepalive 32;
}

# Rate limiting zones (DDoS protection)
limit_req_zone $binary_remote_addr zone=api_limit:10m rate=100r/m;
limit_req_zone $binary_remote_addr zone=general_limit:10m rate=1000r/m;
limit_req_zone $binary_remote_addr zone=login_limit:10m rate=10r/m;
limit_req_zone $binary_remote_addr zone=strict_limit:10m rate=30r/m;

# Connection limiting (prevent connection exhaustion attacks)
limit_conn_zone $binary_remote_addr zone=conn_limit_per_ip:10m;
limit_conn_zone $server_name zone=conn_limit_per_server:10m;

# Request body size limits (prevent large payload attacks)
client_body_buffer_size 128k;
client_max_body_size 10m;
client_header_buffer_size 1k;
large_client_header_buffers 4 8k;

# Timeout protection (prevent slowloris attacks)
client_body_timeout 10s;
client_header_timeout 10s;
send_timeout 10s;
keepalive_timeout 30s;
keepalive_requests 100;

# Main site - HTTP redirect to HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name citricloud.com www.citricloud.com;
    return 301 https://$host$request_uri;
}

# Main site - HTTPS
server {
    listen 443 ssl; # http2 directive optional depending on Nginx version
    listen [::]:443 ssl;
    server_name citricloud.com www.citricloud.com;

    ssl_certificate /etc/letsencrypt/live/citricloud.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/citricloud.com/privkey.pem;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_session_tickets off;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256';
    ssl_prefer_server_ciphers off;

    # Custom error pages
    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;
    
    # Connection limits (DDoS protection)
    limit_conn conn_limit_per_ip 10;
    limit_conn conn_limit_per_server 1000;

    # Security headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Optional CSP (adjust if needed)
    add_header Content-Security-Policy "default-src 'self'; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'; script-src 'self'; font-src 'self' data:" always;

    # Cloudflare header passthrough
    add_header CF-Cache-Status $upstream_http_cf_cache_status;

    # Compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss application/rss+xml font/truetype font/opentype application/vnd.ms-fontobject image/svg+xml;
    brotli on;
    brotli_comp_level 6;
    brotli_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss application/rss+xml font/truetype font/opentype application/vnd.ms-fontobject image/svg+xml;

    # Root directory for static files
    root /home/ubuntu/infrastructure/cloud/web-development/websites/citricloud.com/frontend/dist;
    index index.html;

    # API proxy
    location /api/ {
        limit_req zone=api_limit burst=20 nodelay;
        proxy_pass http://backend_api;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Authorization "Bearer $auth_token";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0";
        expires off;
    }

    # Strict rate limiting for auth endpoints (brute force protection)
    location ~ ^/api/(auth|login|register) {
        limit_req zone=login_limit burst=5 nodelay;
        limit_req zone=strict_limit burst=10;
        proxy_pass http://backend_api;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Authorization "Bearer $auth_token";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_connect_timeout 30s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
        add_header Cache-Control "no-store, no-cache, must-revalidate";
    }

    # Allow access to standardized well-known paths (e.g., BIMI)
    location ^~ /.well-known/ {
        try_files $uri =404;
        add_header Cache-Control "public, max-age=3600";
    }

    # Strict rate limiting for auth endpoints (brute force protection)
    location ~ ^/api/(auth|login|register|reset-password|forgot-password) {
        limit_req zone=login_limit burst=5 nodelay;
        limit_req zone=strict_limit burst=10;
        limit_conn conn_limit_per_ip 5;
        proxy_pass http://backend_api;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Authorization "Bearer $auth_token";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_connect_timeout 30s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
        add_header Cache-Control "no-store, no-cache, must-revalidate";
    }

    location /docs { proxy_pass http://backend_api; }
    location /redoc { proxy_pass http://backend_api; }
    location /openapi.json { proxy_pass http://backend_api; }

    # Uploaded media files - proxy to backend
    location ^~ /uploads/ {
        proxy_pass http://backend_api/uploads/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        expires 1M;
        add_header Cache-Control "public" always;
    }

    location /assets/ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        try_files $uri =404;
    }
    location ~* \.(ico|css|js|gif|jpeg|jpg|png|svg|woff|woff2|ttf|eot)$ {
        expires 1M;
        add_header Cache-Control "public";
        try_files $uri =404;
    }
    location /health { access_log off; return 200 "OK\n"; add_header Content-Type text/plain; }
    # Maintenance mode: redirect all SPA traffic to /maintenance (assets and API unaffected)
    # Exception: health check endpoint
    location = /healthz {
        add_header Cache-Control "no-store";
        return 200 "OK";
    }
    # Serve the maintenance SPA route without re-redirecting
    location = /maintenance {
        add_header Cache-Control "no-store";
        try_files $uri $uri/ /index.html;
    }

    # Error page locations
    location = /404.html {
        root /home/ubuntu/infrastructure/cloud/web-development/websites/citricloud.com/frontend/dist;
    }
    location = /50x.html {
        root /home/ubuntu/infrastructure/cloud/web-development/websites/citricloud.com/frontend/dist;
    }

    location / {
        limit_req zone=general_limit burst=50 nodelay;
        try_files $uri $uri/ /index.html;
        add_header Cache-Control "no-cache, no-store, must-revalidate, max-age=0" always;
        add_header Pragma "no-cache" always;
        add_header Expires "0" always;
    }
    location ~ /\. { deny all; access_log off; log_not_found off; }
    location ~* (\.git|\.env|\.htaccess|\.htpasswd|web\.config|composer\.json|package\.json) { deny all; access_log off; log_not_found off; }
}

